---
title: Blog
description: Blog
layout: layouts/page.njk
banner: blog.jpg
navID: blog
pagination:
  data: objave
  size: 12
permalink: blog{% if pagination.pageNumber > 0 %}/page{{ pagination.pageNumber + 1}}{% endif %}/index.html
---

{% include "partials/page-banner.njk" %}

<!-- sidebar -->
<div class="ttm-row sidebar ttm-sidebar-right ttm-bgcolor-white clearfix">
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-xl-9 col-lg-8 content-area">

            {% for objava in objave %}
                
                <!-- post -->
                <article class="post ttm-blog-classic clearfix">
                        <!-- post-featured-wrapper -->
                    <div class="ttm-post-featured-wrapper ttm-featured-wrapper">
                        <div class="ttm-post-featured">
                            <img class="img-fluid" src="https://media.graphcms.com/{{ objava.photo }}" alt="">
                        </div>
                        <div class="ttm-box-post-date">
                            <span class="ttm-entry-date">
                                <time class="entry-date" datetime="2019-08-28T08:07:55+00:00">28<span class="entry-month">Aug</span></time>
                            </span>
                        </div>
                    </div><!-- post-featured-wrapper end -->
                    <!-- ttm-blog-classic-content -->
                    <div class="ttm-blog-classic-content">
                        <div class="ttm-post-entry-header">
                            <div class="post-meta">
                                <span class="ttm-meta-line byline"><i class="fa fa-user"></i>{{ objava.author }}</span>
                                <span class="ttm-meta-line tags-links"><i class="fa fa-tag"></i>{{ objava.category }}</span>
                            </div>
                            <header class="entry-header">
                                <h2 class="entry-title"><a href="blog-single.html">{{ objava.title }}</a></h2>
                            </header>
                        </div>
                        <div class="entry-content">
                            <div class="ttm-box-desc-text">
                                <p>{{ objava.excerpt }}</p>
                            </div>
                            <div class="ttm-blogbox-desc-footer">
                                <div class="ttm-blogbox-footer-readmore">
                                    <a class="ttm-btn ttm-btn-size-md ttm-btn-shape-square ttm-btn-style-fill ttm-btn-color-dark" href="#">Pročitaj sve</a>
                                </div>
                            </div>
                        </div>
                    </div><!-- ttm-blog-classic-content end -->
                </article><!-- post end -->

                {% endfor %}

                <div class="pagination-block">
                    <span class="page-numbers current">1</span>
                    <a class="page-numbers" href="#">2</a>
                    <a class="next page-numbers" href="#"><i class="ti ti-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 widget-area sidebar-right ttm-col-bgcolor-yes ttm-bg ttm-right-span ttm-bgcolor-grey mt_60 pt-60 mb_60 pb-60 res-991-mt-0 res-991-pt-0">
                <div class="ttm-col-wrapper-bg-layer ttm-bg-layer"></div>
                <aside class="widget widget-Categories with-title">
                    <h3 class="widget-title">Categories</h3>
                    <ul>
                        <li><a href="#">Ljudski resursi (HR)</a></li>
                        <li class="active"><a href="#">Računovodstvo i financije</a></li>
                        <li><a href="#">Informatika</a></li>
                        <li><a href="#">Prodaja i marketing</a></li>
                    </ul>
                </aside>
                <aside class="widget widget-download">
                    <ul class="download">
                        <li><a href="#"><i class="fa fa-file-pdf-o"></i>Brošura</a></li>
                        <li><a href="#"><i class="fa fa-file-word-o"></i>GDPR obrazac</a></li>
                        <li><a href="#"><i class="fa fa-files-o"></i>Download.txt</a></li>
                    </ul>
                </aside>
            </div>
        </div><!-- row end -->
    </div>
</div>
<!-- sidebar end -->