---
title: Otvoreni seminari i radionice
description: Otvoreni seminari i radionice
layout: layouts/page.njk
banner: seminari.jpg
navID: sve
nav2ID: popis
pagination:
  data: seminari.sve
  size: 6
permalink: "edukacije/seminari-i-radionice/otvoreni-seminari-i-radionice{% if pagination.pageNumber > 0 %}/page{{ pagination.pageNumber + 1}}{% endif %}/index.html"
eleventyComputed:
    page_title: "Otvoreni seminari i radionice"
    page_description: "Otvoreni seminari i radionice"
---

<div class="ttm-page-title-row" style="background: url(/images/{{ banner }})!important">
    <div class="ttm-page-title-row-inner ttm-textcolor-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="page-title-heading">
                        <h2 class="title">{{ description }}</h2>
                    </div>
                    <div class="breadcrumb-wrapper">
                        <span>
                            <a title="Homepage" href="/">Poƒçetna</a>
                        </span>
                        <span class="ttm-bread-sep">&nbsp;&gt;&nbsp;</span>
                        <span>Seminari i radionice</span>
                        <span class="ttm-bread-sep">&nbsp;&gt;&nbsp;</span>
                        <span class="current" style="color:#F77F00">{{ title }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>                    
</div>

<!-- sidebar -->
<div class="ttm-row sidebar ttm-sidebar-right ttm-bgcolor-white clearfix">
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-xl-9 col-lg-8 content-area">
                
                <div class="row multi-columns-row ttm-boxes-spacing-10px isotope-project">

                {% for seminar in seminari.sve %}

                <div class="ttm-box-col-wrapper col-lg-6">
                        <!-- featured-imagebox-post -->
                        <div class="featured-imagebox featured-imagebox-event featured-imagebox-post style1" >
                            <div class="ttm-post-featured"> 
                                <img style="width:410px;height:230px;" alt="image" src="https://media.graphcms.com/resize=fit:clip,width:410,height:230/output=format:webp/{{ seminar.fotografija }}">
                            </div>
                            <div class="featured-content featured-content-post">
                                <div class="post-title" style="min-height:60px;!important">
                                    <h5><a href="/edukacije/seminari-i-radionice/{{ seminar.kategorijaslug }}/{{ seminar.titleslug }}/">{{ seminar.title }}</a></h5>
                                </div>
                                <div class="post-desc featured-desc">
                                    <p style="margin-top:0;padding-top:0">{{ seminar.excerpt | truncate(250) }}</p>
                                </div>
                                <hr/>
                                <div class="post-meta">
                                    <span class="ttm-meta-line byline">Trajanje: 1 dan</span>
                                    <span class="ttm-meta-line byline">Cijena: <strong>{{ seminar.cijena }} Kn</strong></span>
                                </div>
                            </div>
                        </div><!-- featured-imagebox-post end-->
                    </div>

                {% endfor %}

                </div>

            </div>
            
            {% include "partials/seminaricategories.njk" %}

        </div><!-- row end -->
    </div>
</div>
<!-- sidebar end -->