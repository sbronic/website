<div class="col-xl-3 col-lg-4 widget-area sidebar-right ttm-col-bgcolor-yes ttm-bg ttm-right-span ttm-bgcolor-grey mt_60 pt-60 mb_60 pb-60 res-991-mt-0 res-991-pt-0">
    <div class="ttm-col-wrapper-bg-layer ttm-bg-layer"></div>
    
    {% if nav2ID === "popis" %}
    <aside class="widget widget-Categories with-title">
        <div class="ttm-btn-box pb-20">
            <a class="ttm-btn ttm-btn-size-lg ttm-btn-shape-square ttm-btn-style-fill ttm-icon-btn-right ttm-btn-color-dark" href="/edukacije/seminari-i-radionice/datumi-odrzavanja/"><i class="fa fa-calendar" aria-hidden="true" style="margin-right:10px;"></i>DATUMI ODRŽAVANJA</a>
        </div>
    </aside>
    {% endif %}

    {% if nav2ID === "datumi" %}
    <aside class="widget widget-Categories with-title">
        <div class="ttm-btn-box pb-20">
            <a class="ttm-btn ttm-btn-size-lg ttm-btn-shape-square ttm-btn-style-fill ttm-icon-btn-right ttm-btn-color-dark" href="/edukacije/seminari-i-radionice/otvoreni-seminari-i-radionice/"><i class="fa fa-list" aria-hidden="true" style="margin-right:10px;"></i>POPIS SEMINARA</a>
        </div>
    </aside>
    {% endif %}

    {% if nav2ID === "seminar" %}
    <aside class="widget widget-Categories with-title">
     <h3 class="widget-title">Rezervirajte termin</h3>
        <div class="ttm-btn-box pb-20">
            <div class="form-group">
                <label for="sel1">Odaberite datum</label>
                <select class="form-control" id="sel1">
                        <option>---</option>
                    {% for datum in seminar.datumiseminara %}
                        <option>{{ datum.dateAndTime | datumDan }}. {{ datum.dateAndTime | datumMjesecDugi }} {{ datum.dateAndTime | datumGodina }}.</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </aside>
    {% endif %}
        
    <aside class="widget widget-Categories with-title">
        <h3 class="widget-title">Kategorije</h3>
        <ul>
            <li class="{% if navID == 'sve' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice">Sve kategorije</a></li>
            <li class="{{ 'active' if '/upravljanje-ljudskim-potencijalima' in page.url }}"><a href="/edukacije/seminari-i-radionice/upravljanje-ljudskim-potencijalima">Upravljanje ljudskim potencijalima</a></li>
            <li class="{{ 'active' if '/prodaja-marketing-i-odnosi-s-javnoscu' in page.url }}"><a href="/edukacije/seminari-i-radionice/prodaja-marketing-i-odnosi-s-javnoscu">Prodaja, marketing i odnosi s javnošću</a></li>
            <li class="{% if navID == 'uia' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/upravljanje-i-administracija">Upravljanje i administracija</a></li>
            <li class="{% if navID == 'iup' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/informatika-i-uredsko-poslovanje">Informatika i uredsko poslovanje</a></li>
            <li class="{% if navID == 'pzp' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/pravo-i-zastita-podataka">Pravo i zaštita podataka</a></li>
            <li class="{% if navID == 'fir' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/financije-i-racunovodstvo">Financije i računovodstvo</a></li>
            <li class="{% if navID == 'znr' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/zastita-na-radu">Zaštita na radu</a></li>
            <li class="{% if navID == 'zouo' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/zastita-okolisa-i-upravljanje-otpadom">Zaštita okoliša i upravljanje otpadom</a></li>
            <li class="{% if navID == 'ostalo' %}active{% endif %}"><a href="/edukacije/seminari-i-radionice/ostalo">Ostalo</a></li>
        </ul>
    </aside>

    {% if navID == 'blog' %}

    <aside class="widget widget-download with-title">
        <h3 class="widget-title">Podijeli priču</h3>
        <div class="container">
            <div>
                <a href="#" style="padding: 0 .3em;"><i class="fa fa-2x fa-facebook-square"></i></a>
                <a href="#" style="padding: 0 .3em;"><i class="fa fa-2x fa-twitter-square"></i></a>
                <a href="#" style="padding: 0 .3em;"><i class="fa fa-2x fa-linkedin-square"></i></a>
                <a href="#" style="padding: 0 .3em;"><i class="fa fa-2x fa-pinterest-square"></i></a>
                <a href="mailto:info@edukacije.hr" style="padding: 0 .5em;" target="_blank"><i class="fa fa-2x fa-envelope-square"></i></a>
            </div>
        </div>
    </aside>

    {% endif %}

</div>