<!-- sidebar -->
<div class="ttm-row sidebar ttm-sidebar-right ttm-bgcolor-white clearfix">
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-xl-9 col-lg-8 content-area">

                {% if seminari != 'prazno' %}
                
                <div class="row multi-columns-row ttm-boxes-spacing-10px isotope-project">

                {% for item in pagination.items %}

                    <div class="ttm-box-col-wrapper col-lg-6">
                        <!-- featured-imagebox-post -->
                        <div class="featured-imagebox featured-imagebox-event featured-imagebox-course style1" >
                            <div class="ttm-post-thumbnail featured-thumbnail"> 
                                <img class="img-fluid lazyload" style="width:410px;height:230px;" alt="{{ item.title }}" src="https://media.graphcms.com/resize=fit:clip,width:410,height:230/output=format:webp/{{ item.fotografija }}">
                            </div>
                            <div class="featured-content-post">
                                <div class="post-title" style="min-height:60px!important;margin-top:30px;padding:0 20px;">
                                    <h5><a href="/edukacije/seminari-i-radionice/{{ item.kategorijaslug }}/{{ item.titleslug }}/">{{ item.title }} ({{item.sifra}})</a></h5>
                                </div>
                                <div class="post-desc featured-desc" style="padding:0 20px;">
                                    <p style="min-height:130px!important;margin-top:0;margin-bottom:20px;padding-top:0">{{ item.excerpt | truncate(250) }}</p>
                                </div>
                                <div class="ttm-course-box-meta">
                                    <div class="ttm-enrolled">
                                        <span class="ttm-comments ttm-meta-line"><i class="fa fa-id-badge" aria-hidden="true"></i>
                                            {% for predavac in item.predavaci %}
                                            {% if loop.first %}
                                            {{ predavac.imeIPrezime }}
                                            {% else %}
                                            , {{ predavac.imeIPrezime }}
                                            {% endif %}
                                            {% endfor %}
                                        </span>
                                        <span class="ttm-comments ttm-meta-line" title="Å ifra proizvoda"><i class="fa fa-barcode" aria-hidden="true"></i>{{ item.sifra }}</span>
                                    </div>  
                                    <span class="ttm-lp-price"><ins>{{ item.cijena }}</ins></span>                            
                                </div>
                            </div>
                        </div><!-- featured-imagebox-post end-->
                    </div>

                {% endfor %}     

                </div>

                <hr/>
                {% include "partials/pagination-block.njk" %}

            </div>
            
                {% else %}

                    <!-- post -->
                    <article class="post ttm-blog-classic clearfix">
                        <!-- ttm-blog-classic-content -->
                        <div class="ttm-blog-classic-content">
                            <div class="ttm-post-entry-header">
                                <header class="entry-header">
                                    <h2 class="entry-title">Trenutno nemamo seminara u ovoj kategoriji.</h2>
                                </header>
                            </div>
                        </div><!-- ttm-blog-classic-content end -->
                    </article><!-- post end -->
            </div>

            {% endif %}
            
            {% include "partials/seminaricategories.njk" %}

        </div><!-- row end -->
    </div>
</div>
<!-- sidebar end -->