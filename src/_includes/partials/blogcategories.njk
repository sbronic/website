<div class="col-xl-3 col-lg-4 widget-area sidebar-right ttm-col-bgcolor-yes ttm-bg ttm-right-span ttm-bgcolor-grey mt_60 pt-60 mb_60 pb-60 res-991-mt-0 res-991-pt-0">
    <aside class="widget widget-Categories with-title">
        <h3 class="widget-title">Kategorije</h3>
        <ul>
            <li class="{% if navID == 'sve' %}active{% endif %}"><a href="/blog">Sve kategorije</a></li>
            <li class="{{ 'active' if '/upravljanje-ljudskim-potencijalima' in page.url }}"><a href="/blog/upravljanje-ljudskim-potencijalima">Upravljanje ljudskim potencijalima</a></li>
            <li class="{{ 'active' if '/prodaja-marketing-i-odnosi-s-javnoscu' in page.url }}"><a href="/blog/prodaja-marketing-i-odnosi-s-javnoscu">Prodaja, marketing i odnosi s javnošću</a></li>
            <li class="{{ 'active' if '/upravljanje-i-administracija' in page.url }}"><a href="/blog/upravljanje-i-administracija">Upravljanje i administracija</a></li>
            <li class="{{ 'active' if '/informatika-i-uredsko-poslovanje' in page.url }}"><a href="/blog/informatika-i-uredsko-poslovanje">Informatika i uredsko poslovanje</a></li>
            <li class="{{ 'active' if '/pravo-i-zastita-podataka' in page.url }}"><a href="/blog/pravo-i-zastita-podataka">Pravo i zaštita podataka</a></li>
            <li class="{{ 'active' if '/financije-i-racunovodstvo' in page.url }}"><a href="/blog/financije-i-racunovodstvo">Financije i računovodstvo</a></li>
            <li class="{{ 'active' if '/zastita-na-radu' in page.url }}"><a href="/blog/zastita-na-radu">Zaštita na radu</a></li>
            <li class="{{ 'active' if '/zastita-okolisa-i-upravljanje-otpadom' in page.url }}"><a href="/blog/zastita-okolisa-i-upravljanje-otpadom">Zaštita okoliša i upravljanje otpadom</a></li>
            <li class="{{ 'active' if '/ostalo' in page.url }}"><a href="/blog/ostalo">Ostalo</a></li>
        </ul>
    </aside>

    {% if navID == 'blog' %}

    <aside class="widget widget-download with-title">
        <h3 class="widget-title">Podijeli ovu objavu</h3>
        <div class="container">
            <div>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ site.url }}{{ page.url }}" target="_blank" style="padding: 0 .3em;" rel="noopener" aria-label="Podijelite ovaj članak na svojim Facebook stranicama"><i class="fa fa-2x fa-facebook-square"></i></a>
                <a href="https://twitter.com/intent/tweet?url={{ site.url }}{{ page.url }}&text=" target="_blank" style="padding: 0 .3em;" rel="noopener" aria-label="Podijelite ovaj članak na svom Twitter profilu"><i class="fa fa-2x fa-twitter-square"></i></a>
                <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ site.url }}{{ page.url }}" target="_blank" style="padding: 0 .3em;" rel="noopener" aria-label="Podijelite ovaj članak na svom Linkedin profilu"><i class="fa fa-2x fa-linkedin-square"></i></a>
                <a href="https://pinterest.com/pin/create/button/?url={{ site.url }}{{ page.url }}" target="_blank" style="padding: 0 .3em;" rel="noopener" aria-label="Podijelite ovaj članak na svom Pinterest profilu"><i class="fa fa-2x fa-pinterest-square"></i></a>
                <a href="mailto:info@edukacije.hr?subject={{ akademija.title }}" target="_blank" style="padding: 0 .5em;" target="_blank" rel="noopener" aria-label="Podijelite ovaj članak email porukom"><i class="fa fa-2x fa-envelope-square"></i></a>
            </div>
        </div>
    </aside>

    {% else %}

    <aside class="widget widget-download with-title">
        <h3 class="widget-title">Pratite naše objave</h3>
        <div class="container">
            <div>
                <a href="/feed.xml" target="_blank" style="padding: 0 .3em;"><i class="fa fa-2x fa-rss"></i></a>
            </div>
        </div>
    </aside>

    {% endif %}

</div>