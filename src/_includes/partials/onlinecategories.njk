                    data-item-custom1-value="Pravna osoba"
                    data-item-custom2-name="Podaci prvog polaznika"
                    data-item-custom2-type="textarea"
                    data-item-custom2-placeholder="Oblik unosa: Ime Prezime, Email, Telefon"
                    data-item-custom2-required="true"
