                    data-item-custom5-name="Molimo vas provjerite da li broj polaznika odgovara količini naručenih edukacija"
                    data-item-custom5-type="readonly"
                {% if edukacija.printanje %}
                    data-item-custom6-name="Opcije dostave materijala na drugim medijima"
                    data-item-custom6-options="Bez dostave materijala|PDF emailom (+160Kn)[+160.00]|Uvezano tiskano izdanje poštom (+160Kn)[+160.00]|PDF i tiskano izdanje (+320Kn)[+320.00]"
                {% endif %}
                    style="margin-top:30px;"
                    class="snipcart-add-item lp-button button button-purchase-course ttm-btn ttm-btn-size-md ttm-btn-shape-square ttm-btn-style-fill ttm-btn-color-dark">Naručite edukaciju</button>
            </div>
        </aside>

    {% endif%}
